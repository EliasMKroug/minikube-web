{{!-- ESTE FORMULARIO ES EL FRONT DE LA RUTA ADD --}}
<div class="container p-4"> 
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body ">
                    <form action="/products/add" method="POST">
                        <div class="form-group p-1">
                            <h3 class="text-center">Agregar un Cliente</h3>
                        </div>
                        <div class="form-group p-2">
                            <input type="text" name="product" class="form-control" placeholder="Nombre" autofocus>
                        </div>
                        <div class="form-group p-2">
                            <input type="text" name="type" class="form-control" placeholder="type">
                        </div>
                        <div class="form-group p-2">
                            <textarea name="description" rows="3" class="form-control" placeholder="Descripcion"></textarea>
                        </div>               
                        <div class="form-group p-2">
                            <input type="int" name="stock" class="form-control" placeholder="Stock" autofocus>
                        </div>
                        <div class="form-group p-2">
                            <input type="int" name="price" class="form-control" placeholder="Price">
                        </div>
                        <div class="form-group p-2">
                            <input type="int" name="cost" class="form-control" placeholder="Cost">
                        </div>
                        <div class="form-group p-2 d-grid gap-1">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>